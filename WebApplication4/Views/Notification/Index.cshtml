@model IEnumerable<WebApplication4.Models.Notification>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm("DeleteAll", "Notification", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <p>
        @Html.ActionLink("Delete All Notifications", "DeleteAll")
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationTitle)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.NotificationMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seen)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificationTitle)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NotificationMessage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificationTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seen)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
